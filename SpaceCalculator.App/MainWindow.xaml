<Window x:Class="SpaceCalculator.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Astro Calculator" Height="780" Width="1080" Background="{StaticResource BackgroundBrush}">
    <Window.Resources>
        <LinearGradientBrush x:Key="BackgroundBrush" StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="#0B1A2C" Offset="0" />
            <GradientStop Color="#102E49" Offset="0.6" />
            <GradientStop Color="#0C2036" Offset="1" />
        </LinearGradientBrush>
        <Style x:Key="CalculatorButton" TargetType="Button">
            <Setter Property="Margin" Value="4" />
            <Setter Property="Padding" Value="10" />
            <Setter Property="FontSize" Value="18" />
            <Setter Property="Foreground" Value="#E6F2FF" />
            <Setter Property="Background" Value="#14304F" />
            <Setter Property="BorderBrush" Value="#1E90FF" />
            <Setter Property="BorderThickness" Value="1" />
        </Style>
        <Style x:Key="AccentButton" TargetType="Button" BasedOn="{StaticResource CalculatorButton}">
            <Setter Property="Background" Value="#1E90FF" />
            <Setter Property="Foreground" Value="#0B1A2C" />
            <Setter Property="FontWeight" Value="SemiBold" />
        </Style>
        <Style x:Key="ControlButton" TargetType="Button" BasedOn="{StaticResource CalculatorButton}">
            <Setter Property="Background" Value="#243A55" />
        </Style>
        <Style x:Key="EqualsButton" TargetType="Button" BasedOn="{StaticResource CalculatorButton}">
            <Setter Property="Background" Value="#20C988" />
            <Setter Property="Foreground" Value="#0B1A2C" />
            <Setter Property="FontWeight" Value="Bold" />
        </Style>
        <Style x:Key="DataInputBox" TargetType="TextBox">
            <Setter Property="Margin" Value="0,2,0,6" />
            <Setter Property="Padding" Value="6" />
            <Setter Property="Background" Value="#112946" />
            <Setter Property="Foreground" Value="#E6F2FF" />
            <Setter Property="BorderBrush" Value="#1E90FF" />
            <Setter Property="BorderThickness" Value="1" />
        </Style>
        <Style x:Key="DataComboBox" TargetType="ComboBox">
            <Setter Property="Margin" Value="0,2,0,6" />
            <Setter Property="Padding" Value="6" />
            <Setter Property="Background" Value="#112946" />
            <Setter Property="Foreground" Value="#E6F2FF" />
            <Setter Property="BorderBrush" Value="#1E90FF" />
            <Setter Property="BorderThickness" Value="1" />
        </Style>
    </Window.Resources>
    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <StackPanel Margin="16">
            <Border CornerRadius="8" BorderBrush="#1E90FF" BorderThickness="2" Padding="12" Background="#10233B">
                <StackPanel>
                    <TextBlock Text="Advanced Scientific Calculator" FontSize="24" Foreground="#CDE6FF" FontWeight="Bold" />
                    <TextBlock Text="Designed for mission planning, orbital mechanics, and everyday math." FontSize="14" Foreground="#9CC4F0" Margin="0,4,0,12" />
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="*" />
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="3*" />
                            <ColumnDefinition Width="2*" />
                        </Grid.ColumnDefinitions>
                        <StackPanel Grid.Row="0" Grid.Column="0" Margin="0,0,12,0">
                            <TextBox Text="{Binding Display, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" FontSize="32" Height="56" Background="#0B1A2C" Foreground="#E6F2FF" BorderBrush="#1E90FF" IsReadOnly="True" />
                            <StackPanel Orientation="Horizontal" Margin="0,6,0,0" HorizontalAlignment="Right">
                                <TextBlock Text="Angle mode" Foreground="#9CC4F0" VerticalAlignment="Center" Margin="0,0,8,0" />
                                <Button Content="{Binding AngleModeLabel}" Click="OnToggleAngleMode" Style="{StaticResource AccentButton}" Width="80" />
                            </StackPanel>
                            <TextBlock Text="{Binding Status}" FontSize="12" Foreground="#6FB2FF" Margin="0,4,0,0" />
                        </StackPanel>
                        <Border Grid.Row="0" Grid.Column="1" Background="#0B1A2C" Padding="12" CornerRadius="6">
                            <StackPanel>
                                <TextBlock Text="Quick Astro Results" Foreground="#CDE6FF" FontWeight="SemiBold" FontSize="16" />
                                <TextBlock Text="Delta-V (Rocket Eq):" Foreground="#9CC4F0" />
                                <TextBlock Text="{Binding DeltaVResult}" Foreground="#E6F2FF" FontSize="16" />
                                <TextBlock Text="Orbital Velocity:" Foreground="#9CC4F0" Margin="0,8,0,0" />
                                <TextBlock Text="{Binding OrbitalVelocityResult}" Foreground="#E6F2FF" FontSize="16" />
                                <TextBlock Text="Escape Velocity:" Foreground="#9CC4F0" Margin="0,8,0,0" />
                                <TextBlock Text="{Binding EscapeVelocityResult}" Foreground="#E6F2FF" FontSize="16" />
                                <TextBlock Text="Hohmann Δv:" Foreground="#9CC4F0" Margin="0,8,0,0" />
                                <TextBlock Text="{Binding TransferDeltaVResult}" Foreground="#E6F2FF" FontSize="16" />
                                <TextBlock Text="Transfer Time:" Foreground="#9CC4F0" Margin="0,8,0,0" />
                                <TextBlock Text="{Binding TransferTimeResult}" Foreground="#E6F2FF" FontSize="16" />
                                <TextBlock Text="Surface Gravity:" Foreground="#9CC4F0" Margin="0,8,0,0" />
                                <TextBlock Text="{Binding SurfaceGravityResult}" Foreground="#E6F2FF" FontSize="16" />
                            </StackPanel>
                        </Border>
                        <Grid Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2" Margin="0,16,0,0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="3*" />
                                <ColumnDefinition Width="2*" />
                            </Grid.ColumnDefinitions>
                            <Border Background="#0B1A2C" Padding="12" CornerRadius="8" BorderBrush="#1E90FF" BorderThickness="1" Grid.Column="0">
                                <UniformGrid Columns="6" Rows="8">
                                    <Button Content="7" Click="OnNumberClick" Style="{StaticResource CalculatorButton}"/>
                                    <Button Content="8" Click="OnNumberClick" Style="{StaticResource CalculatorButton}"/>
                                    <Button Content="9" Click="OnNumberClick" Style="{StaticResource CalculatorButton}"/>
                                    <Button Content="÷" Tag="/" Click="OnOperatorClick" Style="{StaticResource AccentButton}"/>
                                    <Button Content="⌫" Click="OnBackspace" Style="{StaticResource ControlButton}"/>
                                    <Button Content="Mode" Click="OnToggleAngleMode" Style="{StaticResource ControlButton}"/>

                                    <Button Content="4" Click="OnNumberClick" Style="{StaticResource CalculatorButton}"/>
                                    <Button Content="5" Click="OnNumberClick" Style="{StaticResource CalculatorButton}"/>
                                    <Button Content="6" Click="OnNumberClick" Style="{StaticResource CalculatorButton}"/>
                                    <Button Content="×" Tag="*" Click="OnOperatorClick" Style="{StaticResource AccentButton}"/>
                                    <Button Content="CE" Click="OnClearEntry" Style="{StaticResource ControlButton}"/>
                                    <Button Content="Ans" Click="OnUseAnswer" Style="{StaticResource AccentButton}"/>

                                    <Button Content="1" Click="OnNumberClick" Style="{StaticResource CalculatorButton}"/>
                                    <Button Content="2" Click="OnNumberClick" Style="{StaticResource CalculatorButton}"/>
                                    <Button Content="3" Click="OnNumberClick" Style="{StaticResource CalculatorButton}"/>
                                    <Button Content="-" Tag="-" Click="OnOperatorClick" Style="{StaticResource AccentButton}"/>
                                    <Button Content="(" Tag="(" Click="OnNumberClick" Style="{StaticResource CalculatorButton}"/>
                                    <Button Content=")" Tag=")" Click="OnNumberClick" Style="{StaticResource CalculatorButton}"/>

                                    <Button Content="0" Click="OnNumberClick" Style="{StaticResource CalculatorButton}"/>
                                    <Button Content="." Click="OnNumberClick" Style="{StaticResource CalculatorButton}"/>
                                    <Button Content="π" Tag="pi" Click="OnFunctionInsert" Style="{StaticResource CalculatorButton}"/>
                                    <Button Content="+" Tag="+" Click="OnOperatorClick" Style="{StaticResource AccentButton}"/>
                                    <Button Content="τ" Tag="tau" Click="OnFunctionInsert" Style="{StaticResource CalculatorButton}"/>
                                    <Button Content="e" Tag="e" Click="OnFunctionInsert" Style="{StaticResource CalculatorButton}"/>

                                    <Button Content="sin" Tag="sin" Click="OnFunctionInsert" Style="{StaticResource CalculatorButton}"/>
                                    <Button Content="cos" Tag="cos" Click="OnFunctionInsert" Style="{StaticResource CalculatorButton}"/>
                                    <Button Content="tan" Tag="tan" Click="OnFunctionInsert" Style="{StaticResource CalculatorButton}"/>
                                    <Button Content="asin" Tag="asin" Click="OnFunctionInsert" Style="{StaticResource CalculatorButton}"/>
                                    <Button Content="acos" Tag="acos" Click="OnFunctionInsert" Style="{StaticResource CalculatorButton}"/>
                                    <Button Content="atan" Tag="atan" Click="OnFunctionInsert" Style="{StaticResource CalculatorButton}"/>

                                    <Button Content="sinh" Tag="sinh" Click="OnFunctionInsert" Style="{StaticResource CalculatorButton}"/>
                                    <Button Content="cosh" Tag="cosh" Click="OnFunctionInsert" Style="{StaticResource CalculatorButton}"/>
                                    <Button Content="tanh" Tag="tanh" Click="OnFunctionInsert" Style="{StaticResource CalculatorButton}"/>
                                    <Button Content="log" Tag="log" Click="OnFunctionInsert" Style="{StaticResource CalculatorButton}"/>
                                    <Button Content="ln" Tag="ln" Click="OnFunctionInsert" Style="{StaticResource CalculatorButton}"/>
                                    <Button Content="√" Tag="sqrt" Click="OnFunctionInsert" Style="{StaticResource CalculatorButton}"/>

                                    <Button Content="x²" Tag="^2" Click="OnOperatorClick" Style="{StaticResource CalculatorButton}"/>
                                    <Button Content="x^y" Tag="^" Click="OnOperatorClick" Style="{StaticResource CalculatorButton}"/>
                                    <Button Content="∛" Tag="cbrt" Click="OnFunctionInsert" Style="{StaticResource CalculatorButton}"/>
                                    <Button Content="x³" Tag="^3" Click="OnOperatorClick" Style="{StaticResource CalculatorButton}"/>
                                    <Button Content="abs" Tag="abs" Click="OnFunctionInsert" Style="{StaticResource CalculatorButton}"/>
                                    <Button Content="!" Tag="fact" Click="OnFunctionInsert" Style="{StaticResource CalculatorButton}"/>

                                    <Button Content="g₀" Tag="g0" Click="OnFunctionInsert" Style="{StaticResource CalculatorButton}"/>
                                    <Button Content="c" Tag="c" Click="OnFunctionInsert" Style="{StaticResource CalculatorButton}"/>
                                    <Button Content="AU" Tag="au" Click="OnFunctionInsert" Style="{StaticResource CalculatorButton}"/>
                                    <Button Content="10ˣ" Tag="pow10" Click="OnFunctionInsert" Style="{StaticResource CalculatorButton}"/>
                                    <Button Content="exp" Tag="exp" Click="OnFunctionInsert" Style="{StaticResource CalculatorButton}"/>
                                    <Button Content="=" Click="OnEquals" Style="{StaticResource EqualsButton}"/>
                                </UniformGrid>
                            </Border>
                            <Border Background="#0B1A2C" Padding="12" CornerRadius="8" BorderBrush="#1E90FF" BorderThickness="1" Grid.Column="1" Margin="12,0,0,0">
                                <StackPanel>
                                    <TextBlock Text="Mission Utilities" Foreground="#CDE6FF" FontSize="16" FontWeight="SemiBold" />
                                    <Grid Margin="0,8,0,0">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>
                                        <StackPanel Grid.Column="0">
                                            <TextBlock Text="Initial Mass (kg)" Foreground="#9CC4F0" />
                                            <TextBox Text="{Binding RocketInitialMass}" Style="{StaticResource DataInputBox}" />
                                            <TextBlock Text="Final Mass (kg)" Foreground="#9CC4F0" />
                                            <TextBox Text="{Binding RocketFinalMass}" Style="{StaticResource DataInputBox}" />
                                            <TextBlock Text="Exhaust Velocity (m/s)" Foreground="#9CC4F0" />
                                            <TextBox Text="{Binding RocketExhaustVelocity}" Style="{StaticResource DataInputBox}" />
                                            <Button Content="Compute Δv" Click="OnComputeDeltaV" Style="{StaticResource AccentButton}" />
                                        </StackPanel>
                                        <StackPanel Grid.Column="1">
                                            <TextBlock Text="Reference Body" Foreground="#9CC4F0" />
                                            <ComboBox ItemsSource="{Binding BodyPresets}" SelectedItem="{Binding SelectedBody}" DisplayMemberPath="Name" Style="{StaticResource DataComboBox}" />
                                            <TextBlock Text="μ (km³/s²)" Foreground="#9CC4F0" />
                                            <TextBox Text="{Binding MuValue}" Style="{StaticResource DataInputBox}" />
                                            <TextBlock Text="Radius 1 (km)" Foreground="#9CC4F0" />
                                            <TextBox Text="{Binding Radius1}" Style="{StaticResource DataInputBox}" />
                                            <TextBlock Text="Radius 2 (km)" Foreground="#9CC4F0" />
                                            <TextBox Text="{Binding Radius2}" Style="{StaticResource DataInputBox}" />
                                            <StackPanel Orientation="Horizontal" Margin="0,4,0,0">
                                                <Button Content="Orbital v" Click="OnComputeOrbitalVelocity" Style="{StaticResource CalculatorButton}" />
                                                <Button Content="Escape v" Click="OnComputeEscapeVelocity" Style="{StaticResource CalculatorButton}" Margin="4,0,0,0" />
                                                <Button Content="Hohmann" Click="OnComputeHohmann" Style="{StaticResource CalculatorButton}" Margin="4,0,0,0" />
                                            </StackPanel>
                                            <StackPanel Orientation="Horizontal" Margin="0,6,0,0">
                                                <Button Content="Surface g" Click="OnComputeSurfaceGravity" Style="{StaticResource CalculatorButton}" />
                                                <Button Content="Transfer time" Click="OnComputeHohmannTime" Style="{StaticResource CalculatorButton}" Margin="6,0,0,0" />
                                            </StackPanel>
                                        </StackPanel>
                                    </Grid>
                                </StackPanel>
                            </Border>
                        </Grid>
                    </Grid>
                </StackPanel>
            </Border>
        </StackPanel>
    </ScrollViewer>
</Window>
